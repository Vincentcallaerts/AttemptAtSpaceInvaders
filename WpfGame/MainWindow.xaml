<Window x:Class="WpfGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FocusManager.FocusedElement="{Binding ElementName=theCanvas}">
    

    <Canvas x:Name="theCanvas"  KeyDown="theEllipse_KeyDown" KeyUp="theEllipse_KeyUp" Focusable="True">
        <Image x:Name="spaceShip" Height="32" Width="64" Source="Images\space-invaders.jpg">
            
        </Image>
        <Image x:Name="invader1" Height="32" Width="64" Margin="0,0,10,0" Source="Images\invader.png">

        </Image>
        
        <Image x:Name="invader2" Height="32" Width="64" Source="Images\invader.png">

        </Image>
        <Image x:Name="invader3" Height="32" Width="64" Source="Images\invader.png">

        </Image>
        <Image x:Name="invader4" Height="32" Width="64" Source="Images\invader.png">

        </Image>
        <Image x:Name="invader5" Height="32" Width="64" Source="Images\invader.png">

        </Image>
        <Image x:Name="invader6" Height="32" Width="64" Source="Images\invader.png">

        </Image>
    </Canvas>
    
</Window>
